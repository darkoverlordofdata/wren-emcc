
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "emcc",
            "args": [
                "-std=c18",
                "-fblocks",
                "src/main.c",
                "src/wc/script.c", 
                "src/wc/method.c", 
                "src/math/Mat.c",
                "src/math/Vec2.c",.
                "src/math/Vec3.c",
                "src/math/Vec4.c",
                "src/wren/path.c",                 
                "src/io/File.c",
                "src/io/Path.c",
                "src/io/Stream.c",
                // "libs/cfw/src/cfw.c",
                // "libs/cfw/src/cfwfs.c",
                // "libs/cfw/src/bitvector.c",
                // "libs/cfw/src/uuid.c",
                // "libs/cfw/src/random.c",
                // "libs/dna/src/arrayrenderer.c",
                // "libs/dna/src/elementrenderer.c",
                // "libs/dna/src/game.c",
                // "libs/dna/src/resourcemanager.c",
                // "libs/dna/src/shader.c",
                // "libs/dna/src/texture2d.c",
                "libs/libcorefw.bc",
                "libs/libwren.bc",
                // "libs/libBlocksRuntime.bc",
                // "-Ilibs/cfw/include",
                // "-Ilibs/dna/include",
                "-Ilibs/wren/include",
                // "-Iexternal/stb",
                // "-Iexternal/blocksruntime/BlocksRuntime",
                "-Iinclude",
                "-s", "WASM=1",
                "-s", "USE_SDL=2",
                "-s", "USE_WEBGL2=1",
                "-s", "USE_GLFW=3",
                "-o", "docs/index.html",
                "--use-preload-plugins",
                "--preload-file", "data/wren/main.wren",
                "--preload-file", "data/wren/test.wren",
                "--preload-file", "data/wren/io.wren",
                "--preload-file", "data/wren/math.wren",
                "--preload-file", "readme.md",
            ],

            "problemMatcher": {
                "owner": "emcc",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true

            }
        }
    ]
}
